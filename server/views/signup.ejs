<link rel="stylesheet" type="text/css" href="/css/signin.css">
<main class="main">
<div class="login-page">
    <div class="form">
      <form class="login-form" action="/users/create" method="POST" >
		<h1>Registration</h1>
		<div class="social-container">
			<a href="/users/auth/google" class="social"><img src="/images/google.png" height="30" width="30"><span></span></a>
		</div>
        <span>or use your account</span>
		<p>
			<label for="fullname">Full Name</label>
		<input type="name" name="name" placeholder="your name" required>
	   </p>

	   <p>
		<label for="fullname">Email</label>
		<input type="email" name="email" placeholder="your email"  required>
	   </p>

		<p>
			<label for="fullname">Password</label>
		<input type="password" name="password" placeholder="your password"  required>
		</p>

		<p>
		<label for="fullname">Confirm Password</label>
		<input type="password" name="confirm_password" placeholder="Confirm password"  required>
		 </p>
		<a href="/users/forget_&_update_password/forget_password">Forgot your password?</a>
		<button>Registration</button>
		
	</form>
	<footer class="signup-footer">
		<p>Already have an Account? <a href="/users/signin">Login</a> </p>
	</footer>
    </div>
  </div>
</main>